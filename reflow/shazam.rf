// Reflow module for SHazaM Clonal Assignment Threshold Tuning step. 

param (
	docker_image = "kleinstein/immcantation:1.10.2"
	num_sp = 4
)

func ShazamRun(genotyped_tsv file, run_name string) dir = 
	exec(image := docker_image) (output dir) {"
		mv {{genotyped_tsv}} genotyped.tab

		Rscript /usr/local/bin/shazam-threshold \
    	-d genotyped.tab \
    	-n {{run_name}} \
    	-o {{output}} \
    	-p {{num_sp}}
	"}
